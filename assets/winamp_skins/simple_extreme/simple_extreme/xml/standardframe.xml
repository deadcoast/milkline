<groupdef id="wasabi.titlebar">
	<layer 
		id="mousetrap" 
		x="0" y="0" 
		w="0" h="25" 
		relatw="1"
		move="1"
	/><!--w="-2" h="0" 
		relatw="1" relath="1" -->
	<text 
		id="window.titlebar.title"
		x="5" y="-2" 
		w="-50" h="15"
		relatw="1" 
		default=":componentname" 
		font="a_LCDNova"
		align="left" 
		fontsize="15" color="223,223,226" 
		inactiveAlpha="150" move="1"
		antialias="1" bold ="0"
	/><!--a_LCDNova/player.songticker.font/Trebuchet MS-->
</groupdef>

<groupdef id="wasabi.frame.layout" background="player/bg.png"><!--component.basetexture-->
	<layer 
		id="regiontopright" 
		x="-4" y="0" 
		relatx="1" 
		image="component.region.top.right" 
		sysregion="-2"
	/>
	<layer 
		id="regiontopleft" 
		x="0" y="0" 
		image="component.region.top.left" 
		sysregion="-2"
	/>
	<layer 
		id="component.left" 
		x="0" y="15" 
		h="0" 
		relath="1" 
		image="component.left" 
		resize="left"
	/>
	<layer 
		id="component.right" 
		x="-8" y="15" 
		relatx="1"		
		h="0" 
		relath="1" 
		image="component.right" 
		resize="right"
	/>
	<layer 
		id="component.top.left" 
		x="0" y="0" 
		image="component.top.left" 
		resize="topleft"
	/>
	<layer 
		id="component.top.middle" 
		x="12" y="0" 
		w="-12" relatw="1" 
		image="component.top.middle" 
		resize="top"
	/>
	<layer 
		id="component.top.right" 
		x="-12" y="0" 
		relatx="1" 
		image="component.top.right" 
		resize="topright"
	/>
	<layer 
		id="disable.resize.top" 
		x="3" y="3" 
		h="25" w="-8" 
		relatw="1"
	/>
	
	<group 
		id="wasabi.titlebar" 
		x="22" y="6" 
		w="-42" h="25" 
		relatw="1"
	/>
	
	<button
		id="shadeSysmenu"
		action="SYSMENU"
		x="3" y="-1"
		image="logo.base"
		downImage="logo.pressed"
		hoverImage="logo.hover"
		tooltip="Main Menu"
		inactiveAlpha="150"
	/>
</groupdef>

